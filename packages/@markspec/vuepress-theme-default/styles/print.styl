@require './config'

// narrow desktop / iPad
@media print
  .sidebar
    display: none
  .navbar
    display: none
  .markdown-section
    page-break-before: auto  
    &.markdown-section-h1
      page-break-before: right
    &.markdown-section-h2
      page-break-before: always
    h1, h2, h3, h4, h5, h6
      page-break-after: avoid
    pre, blockquote
      page-break-inside: avoid
