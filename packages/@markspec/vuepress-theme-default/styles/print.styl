@require './config'

@media print

  a[href*='//']:after {
      content:" (" attr(href) ") ";
  }

  .sidebar
    display: none
  .navbar
    display: none
  .page-nav
    display: none

  .markdown-section
    page-break-before: auto
    &.markdown-section-h1
      page-break-before: always
    &.markdown-section-h2
      page-break-inside: avoid
    &.markdown-section-h3
      page-break-inside: avoid
    &.markdown-section-h4
      page-break-inside: avoid

  ol, ul
    page-break-inside: auto
  pre, blockquote, table
    page-break-inside: avoid

